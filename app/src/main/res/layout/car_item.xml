<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="metadata"
            type="com.coding.sixt.model.CarPreview" />
    </data>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layoutDirection="rtl"
    android:textAlignment="center"
    android:background="@color/Orange_200"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/make"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text=""
        android:textDirection="ltr"
        android:gravity="center"
        android:background="@color/black"
        android:textColor="@color/Orange"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/modelname"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text=""
        android:gravity="left"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
        app:layout_constraintTop_toTopOf="@id/make"
        tools:ignore="MissingConstraints,RtlHardcoded" />
    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text=""
        android:gravity="left"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
        app:layout_constraintTop_toTopOf="@id/modelname"
        tools:ignore="MissingConstraints,RtlHardcoded" />
    <ImageView
        android:id="@+id/CarItemImageView"
        android:layout_width="0dp"
        android:contentDescription="@string/empty"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="40dp"
        android:background="@color/gray_600" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>