<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_itemlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layoutDirection="rtl"
        android:textAlignment="center"

        android:background="@drawable/rounded_itemlist"
        android:focusable="true"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/make"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textDirection="ltr"
            android:gravity="center"
            android:background="@drawable/rounded_textview"
            android:textColor="@color/Orange"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="20sp"
            android:lines="1"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_margin="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/modelname"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text=""
            android:gravity="left"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
            app:layout_constraintTop_toTopOf="@id/make"
            tools:ignore="MissingConstraints,RtlHardcoded" />
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text=""
            android:gravity="left"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
            app:layout_constraintTop_toTopOf="@id/modelname"
            tools:ignore="MissingConstraints,RtlHardcoded" />
        <TextView
            android:id="@+id/transmissionView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text=""
            android:gravity="left"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
            app:layout_constraintTop_toTopOf="@id/name"
            tools:ignore="MissingConstraints,RtlHardcoded" />
        <TextView
            android:id="@+id/fuelTypeView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text=""
            android:gravity="left"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toEndOf="@+id/CarItemImageView"
            app:layout_constraintTop_toTopOf="@id/transmissionView"
            tools:ignore="MissingConstraints,RtlHardcoded" />
        <ImageView
            android:id="@+id/CarItemImageView"
            android:layout_width="0dp"
            android:contentDescription="@string/empty"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@+id/name"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
